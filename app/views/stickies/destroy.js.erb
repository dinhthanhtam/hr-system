<% if current_user.id != @sticky.report.user_id %>
  $('#image_baget_<%= @sticky.report_id %>').find("img").remove()
<% end %>

<% if @sticky %>
  $('img#add_sticky_<%= @sticky.report_id %>').attr("src","/assets/ico_hurt.png")
  var link_a = $('img#add_sticky_<%= @sticky.report_id %>').parents("a")
  $(link_a).attr("href", "<%= url_for(controller: "stickies", action: :create, report_id: @sticky.report_id, user_id: current_user.id ) %>")
  $(link_a).data("method","POST")
  $(link_a).data("confirm","<%= t(:sticky,scope: [:views, :labels]) %>")
<% end %>
