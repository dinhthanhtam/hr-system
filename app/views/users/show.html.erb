<table class="formTbl contents">
  <tr>
    <th width="15%"><%= model.human_attribute_name :email %></th>
    <td><%= @user.email %></td>
  </tr>
  <tr>
    <th><%= model.human_attribute_name :display_name %></th>
    <td><%= @user.display_name %></td>
  </tr>
  <tr>
    <th><%= model.human_attribute_name :cardID %></th>
    <td><%= @user.cardID %></td>
  </tr>
  <% if ["Leader", "Subleader", "Staff"].include? @user.position %>
    <tr>
      <th><%= model.human_attribute_name :team %></th>
      <td><%= @user.team.try(:name) %></td>
    </tr>
  <% end %>
  <tr>
    <th><%= model.human_attribute_name :position %></th>
    <td><%= @user.position %></td>
  </tr>
  <tr>
    <th><%= model.human_attribute_name :created_at %></th>
    <td><%= @user.created_at %></td>
  </tr>
  <tr>
    <th><%= model.human_attribute_name :updated_at %></th>
    <td><%= @user.updated_at %></td>
  </tr>
</table>
<div class="form-actions">
  <%= link_to t(:button_index, scope: [:views, :labels]), url_for(action: :index), class: "btn" %>
  <%= link_to t(:button_edit, scope: [:views, :labels]), url_for(action: :edit), class: "btn btn-primary" %>
  <%= link_to t(:button_delete, scope: [:views, :labels]), url_for(action: :destroy), confirm: t(:confirm_delete, scope: [:views, :labels]), method: :delete, class: "btn btn-danger" %>
</div>