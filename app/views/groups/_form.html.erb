<%= form_for @group, url: {action: @group.new_record? ? :create : :update} do |f| %>

  <table class="formTbl contents">
    <tr>
      <th><%= f.label :name %></th>
      <td><%= f.text_field :name %></td>
    </tr>
    
  </table>
  <div class="form-actions">
    <%= f.submit @group.new_record? ? "Create" : "Edit", class:"btn btn-primary" %>
  </div>
<% end %>
