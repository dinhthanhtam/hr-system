<tr>
  <td colspan = 2 style = "padding-left:2%;" ><label><%= i + 1 %>.<%= checkpoint_answer.checkpoint_question.content %></label></td>
</tr>
<%= f.fields_for :checkpoint_answers, checkpoint_answer do |checkpoint_answers| %>
  <tr>
    <td class = "labels">
      <%= checkpoint_answers.text_area :content, style: "width: 50%" %>(Contents)
    </td>
  </tr>
  <tr>
    <td class = "labels">
      <%= checkpoint_answers.text_field :point %>/(<%= checkpoint_answer.checkpoint_question.max_point %> points)
      <%= checkpoint_answers.hidden_field :checkpoint_question_id %>
    </td>
  </tr>
<% end %>
