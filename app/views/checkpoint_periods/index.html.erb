<selection id="checkpoint_periods_index">
  <div class="link" style="margin-bottom: 15px;">
    <a href="<%= url_for(action: :new) %>" class="link-a">
      <i class="icon_add icon"></i><span><%= t(:button_new, scope: [:views, :labels]) %></span>
    </a>
  </div>

  <%= render partial: "search" %>

  <table class="table table-bordered">
    <thead>
      <tr>
        <th><%= model.human_attribute_name :name %></th>
        <th><%= model.human_attribute_name :start_date %></th>
        <th><%= model.human_attribute_name :end_date %></th>
        <th width = "20%"></th>
      </tr>
    </thead>
    <% @checkpoint_periods.each do |checkpoint_period| %>
      <tr>
        <td><%= checkpoint_period.name %></td>
        <td><%= checkpoint_period.start_date %></td>
        <td><%= checkpoint_period.end_date %></td>
        <td>
          <%= link_to t(:button_detail, scope: [:views, :labels]), url_for(action: :show, id: checkpoint_period.id),
                class: "btn btn-mini" %>
          <%= link_to t(:button_edit, scope: [:views, :labels]), url_for(action: :edit, id: checkpoint_period.id),
                class: "btn btn-mini btn-primary" %>
          <%= link_to t(:button_delete, scope: [:views, :labels]), url_for(action: :destroy, id: checkpoint_period.id),
                confirm: "Do you want to delete it ?", method: :delete, class: "btn btn-mini btn-danger"%>
        </td>
      </tr>
    <% end %>
  </table>
  <div class="pagination">
    <div class="paginate-box no_print"><%= will_paginate @checkpoint_periods %></div>
  </div>
</selection>
