<%= form_for @report_category, url: {action: @report_category.new_record? ? :create : :update} do |f| %>

  <table class="formTbl contents">
    <tr>
      <th><%= f.label :name %></th>
      <td><%= f.text_field :name %></td>
    </tr>
    
  </table>
  <div class="form-actions">
    <%= f.submit @report_category.new_record? ? I18n.t(:button_create, scope: [:views, :labels]) : I18n.t(:button_edit, scope: [:views, :labels]), class:"btn btn-primary" %>
  </div>
<% end %>
