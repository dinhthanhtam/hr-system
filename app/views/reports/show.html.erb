<selection id="report_show">
  <div class="ctsTit">
    <h2><%= h2_label %></h2>
  </div>

  <table class="formTbl contents">
    <tbody>
      <tr>
        <th width="15%"><%= model.human_attribute_name :report_category_id %></th>
        <td><%= @report.report_category.name %></td>
      </tr>
      <tr>
        <th><%= model.human_attribute_name :title %></th>
        <td><%= @report.title %></td>
      </tr>
      <tr>
        <th><%= model.human_attribute_name :description %></th>
        <td><%= @report.description %></td>
      </tr>
      <tr>
        <th><%= model.human_attribute_name :report_date %></th>
        <td><%= @report.report_date %></td>
      </tr>
      <tr>
        <th><%= model.human_attribute_name :updated_at %></th>
        <td><%= @report.updated_at %></td>
      </tr>
      
    </tbody>
  </table>
  <div class="form-actions">
    <%= link_to t(:button_index, scope: [:views, :labels]), url_for(action: :index), class: "btn" %>
    <%= link_to_if(@report.in_current_week?, t(:button_edit, scope: [:views, :labels]), url_for(action: :edit), class: "btn btn-primary") {} %>
    <%= link_to_if(@report.in_current_week?, t(:button_delete, scope: [:views, :labels]), url_for(action: :destroy), confirm: I18n.t(:delete_confirm, scope: [:views, :messages]), method: :delete, class: "btn btn-danger") {} %>
  </div>

</section>
