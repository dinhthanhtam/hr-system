<!DOCTYPE html>
<html>
<head>
  <title>HrSystem</title>
  <%= stylesheet_link_tag "application", :media => "all" %>
  <%= javascript_include_tag "application" %>
  
  <%= csrf_meta_tags %>
</head>
<body>
  <header id="pageHeader" class="navbar navbar-inverse navbar-fixed-top">
    <div class="navbar-inner">
      <div class="logo">
        <%= link_to image_tag("/assets/logo.png"), root_path %>
      </div>
      <% if current_user %>
        <%= render partial: "layouts/navigation_tab" %>
      <% end %>
      <% if current_user %>
        <div id="account" class="">
          <ul class="nav" style="font-size: 12px;">
            <li class="dropdown">
              <a class="dropdown-toggle" data-toggle="dropdown" style="font-size: 12px;">
              <i class="icon-staff icon-white"></i>
                <%= current_user.try(:display_name) %>
              <b class="caret"></b>
              </a>
              <ul class="dropdown-menu">
                <li><%= link_to "Profile", "#" %></li>
                <li><%= link_to "Personal Settings", "#" %></li>
                <li class="divider"></li>
                <% if current_user.is_manager? %>
                  <li><%= link_to "Project", url_for(controller: :projects, action: :index) %></li>
                  <li><%= link_to "Gantt", url_for(controller: :projects, action: :gantt_list) %></li>
                  <li><%= link_to "Payslip", url_for(controller: :payslips, action: :index) %></li>
                  <li class="divider"></li>
                <% end %>
                <li><%= link_to "Logout", destroy_user_session_path, method: :delete %></li>
              </ul>
            </li>
            <%= image_tag(current_user.avatar_url, class: "img-circle") %>
          </ul>
        </div>
      <% end %>
    </div>
    
  </header>
  <div id="pageBody" class="bs-header">

    <% if flash[:error] %>
      <p class="alert alert-error fade in"><a class="close" data-dismiss="alert" href="javascript:void(0)">Ã—</a><%= flash[:error] %></p>
    <% end %>
    <%= yield %>
  </div>

  <footer class="footer">
    <small>
      <a href="http://framgia.com/vn">Framgia Co, Ltd</a>
    </small>
  </footer>

</body>
</html>
