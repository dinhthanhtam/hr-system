<selection id="projects_index">
  <div class="ctsTit">
    <h2><%= h2_label %></h2>
    <nav>
      <%= link_to t(:new, scope: [:views, :pages]), url_for(action: :new), class: "btn btn-small btn-warning" %>
    </nav>
  </div>
  
  <div class = "prepare_pr">
    <h2>Project Prepare</h2>
    <ul class="projects root">
      <% Project.get_project_by_state(Settings.state.prepared).each do |project| %>
        <li class="root">
          <div class="root">
            <%= link_to project.name, url_for(action: :show, id: project.id), class: "project my-project" %>
            <% if project.description.present? %>
              <div class="wiki description">
                <p><%= project.description %></p>
              </div>
            <% end %>
          </div>
        </li>
      <% end %>
    <ul>
  </div>

  <div class = "prepare_pr">
    <h2>Project Actived</h2>
    <ul class="projects root">
      <% Project.get_project_by_state(Settings.state.actived).each do |project| %>
        <li class="root">
          <div class="root">
            <%= link_to project.name, url_for(action: :show, id: project.id), class: "project my-project" %>
            <% if project.description.present? %>
              <div class="wiki description">
                <p><%= project.description %></p>
              </div>
            <% end %>
          </div>
        </li>
      <% end %>
    <ul>
  </div>

  <div class = "prepare_pr">
    <h2>Project Finished</h2>
    <ul class="projects root">
      <% Project.get_project_by_state(Settings.state.finished).each do |project| %>
        <li class="root">
          <div class="root">
            <%= link_to project.name, url_for(action: :show, id: project.id), class: "project my-project" %>
            <% if project.description.present? %>
              <div class="wiki description">
                <p><%= project.description %></p>
              </div>
            <% end %>
          </div>
        </li>
      <% end %>
    <ul>
  </div> 
  
</selection>
